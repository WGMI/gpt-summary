{
  "manifest_version": 3,
  "name": "Webpage Summarizer",
  "version": "1.0",
  "description": "Summarizes the current webpage content using GPT.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  
  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  }
}
